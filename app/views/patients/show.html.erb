<h1><%= "#{@patient.name} appointments" %></h1>
<h2><%= @patient.age %></h2>

<ul>
    <% @patient.appointments.each do |appt| %>
        <li>
            <%= appt.appointment_datetime.strftime("%B %e, %Y at %k:%M") %>
            <%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
        </li>
    <% end %>
</ul>