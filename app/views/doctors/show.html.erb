<h1><%= "#{@doctor.name} appointments" %></h1>
<h2><%= @doctor.department %></h2>

<ul>
    <% @doctor.appointments.each do |appt| %>
        <li>
            <%= appt.appointment_datetime.strftime("%B %e, %Y at %k:%M") %>
            <%= link_to appt.patient.name, patient_path(appt.patient) %>
        </li>
    <% end %>
</ul>